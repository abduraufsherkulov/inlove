<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ title }}</title>
<base href="{{ base }}" />
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
{% if keywords %}
<meta name="keywords" content="{{ keywords }}" />
{% endif %}
<script src="catalog/view/javascript/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
<link href="catalog/view/javascript/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen" />
<script src="catalog/view/javascript/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
<link href="//fonts.googleapis.com/css?family=Open+Sans:400,400i,300,700" rel="stylesheet" type="text/css" />
<link href="catalog/view/theme/default/stylesheet/stylesheet.css" rel="stylesheet">
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
<script src="catalog/view/javascript/common.js" type="text/javascript"></script>
{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% for analytic in analytics %}
{{ analytic }}
{% endfor %}
</head>
<body>

<nav id="topoftop">
  <div class="container">
      <div id="topoftop-links" class="pull-right">
        <ul class="list-inline cutbottom">
          <li class="hidden-xs hidden-sm hidden-md"><a href="{{ contact }}">Что с моим заказом</a> <span class="hidden-xs hidden-sm hidden-md"></span></li>
          <li class="hidden-xs hidden-sm hidden-md"><a href="{{ contact }}">Обратный связь</a> <span class="hidden-xs hidden-sm hidden-md"></span></li>
          <li><a href="{{ contact }}"><i class="fa fa-sitemap head-top" aria-hidden="true"></i></a> <span class="hidden-xs hidden-sm hidden-md"></span></li>
          <li><a href="{{ contact }}"><i class="fa fa-instagram head-top" aria-hidden="true"></i></a> <span class="hidden-xs hidden-sm hidden-md"></span></li>
          <li><a href="{{ contact }}"><i class="fa fa-facebook-square head-top" aria-hidden="true"></i></a> <span class="hidden-xs hidden-sm hidden-md"></span></li>
          <li><a href="{{ contact }}"><i class="fa fa-telegram head-top" aria-hidden="true"></i></a> <span class="hidden-xs hidden-sm hidden-md"></span></li>
          <li>{{ language }}</li>
        </ul>
      </div>
  </div>
</nav>
<nav id="top">
  <div class="container">
    <div class="pull-left">
      <div class="row flexer">
        <div class="col-sm-2">
        <div id="logo">{% if logo %}<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" /></a>{% else %}
          <h1><a href="{{ home }}">{{ name }}</a></h1>
          {% endif %}</div>
        </div>
        <div class="col-sm-4 col-xs-12">
          {{ search }}
        </div>
        <div class="col-sm-5 col-xs-12">    
          <div id="top-links" class="nav pull-right">
            <ul class="list-inline" style="display: flex; align-items: center; text-align: center">
<!--               <li><a href="{{ contact }}"><i class="fa fa-phone"></i></a> <span class="hidden-xs hidden-sm hidden-md">{{ telephone }}</span></li> -->
              <li class="dropdown width-100"><a href="{{ account }}" title="{{ text_account }}" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <div class="hidden-xs hidden-sm hidden-md">{{ text_account }}</div> <!--<span class="caret"></span>--></a>
                <ul class="dropdown-menu dropdown-menu-right">
                  {% if logged %}
                  <li><a href="{{ account }}">{{ text_account }}</a></li>
                  <li><a href="{{ order }}">{{ text_order }}</a></li>
                  <li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
                  <li><a href="{{ download }}">{{ text_download }}</a></li>
                  <li><a href="{{ logout }}">{{ text_logout }}</a></li>
                  {% else %}
                  <li><a href="{{ register }}">{{ text_register }}</a></li>
                  <li><a href="{{ login }}">{{ text_login }}</a></li>
                  {% endif %}
                </ul>
              </li>
              <li class="border-left width-100"><a href="{{compare_button}}" id="compare-total" title="{{ text_compare_button }}"><i class="fa fa-bar-chart"></i><span class="badge badge-top">{{count_compare}}</span> <div class="hidden-xs hidden-sm hidden-md">{{ text_compare_button }}</div></a></li>
              <li class="border-left width-100"><a href="{{ wishlist }}" id="wishlist-total" title="{{ text_wishlist }}"><i class="fa fa-heart"></i> <span class="badge badge-top">{{count_wishlist}}</span><div class="hidden-xs hidden-sm hidden-md">{{ text_wishlist }}</div></a></li>
              <li class="border-left width-100">{{ cart }}</li>
<!--               <li class="border-left"><a href="{{ shopping_cart }}" title="{{ text_shopping_cart }}"><i class="fa fa-shopping-cart"></i> <div class="hidden-xs hidden-sm hidden-md">{{ text_shopping_cart }}</div></a></li> -->
<!--               <li><a href="{{ checkout }}" title="{{ text_checkout }}"><i class="fa fa-share"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_checkout }}</span></a></li> -->
            </ul>
          </div>
        </div>
        <!-- <div class="col-sm-1">{{ currency }}</div> -->
<!--         <div class="col-sm-1">{{ language }}</div>
        </div> -->
  </div>
  </div>
</nav>
<nav id="toper">
  <div class="container">
      <div class="row">
        <ul class="flexer mid">
            {% for information in information_last %}
            <li>
              <a class="flexme" href="{{ information.href }}">
              {% if information.id == '9' %}
              {% set text = "<img src='image/small_icons/1.png' />" %}
              {{text}}
              <span class="padme hidden-xs hidden-sm hidden-md">{{ information.title }}</span>
              {% endif %}
              {% if information.id == '10' %}
              {% set text = "<img src='image/small_icons/2.png' />" %}
              {{text}}
              <span class="padme hidden-xs hidden-sm hidden-md">{{ information.title }}</span>
              {% endif %}
              {% if information.id == '11' %}
              {% set text = "<img src='image/small_icons/3.png' />" %}
              {{text}}
              <span class="padme hidden-xs hidden-sm hidden-md">{{ information.title }}</span>
              {% endif %}
              {% if information.id == '12' %}
              {% set text = "<img src='image/small_icons/4.png' />" %}
              {{text}}
              <span class="padme hidden-xs hidden-sm hidden-md">{{ information.title }}</span>
              {% endif %}
              {% if information.id == '13' %}
              {% set text = "<img src='image/small_icons/5.png' />" %}
              {{text}}
              <span class="padme hidden-xs hidden-sm hidden-md">{{ information.title }}</span>
              {% endif %}
              </a>
            </li>
            {% endfor %}
         </ul>
      </div>
  </div>
</nav>
<div class="container">
</div>
